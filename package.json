{
  "name": "go-palm-trees",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev:mobile": "turbo run dev --filter=@palmtree/mobile",
    "dev:admin": "turbo run dev --filter=@palmtree/admin",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=@palmtree/admin",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "emulators": "firebase emulators:start",
    "emulators:seed": "firebase emulators:start --import=./seed --export-on-exit=./seed",
    "seed": "pnpm --dir scripts run seed"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  }
}
