{
  "name": "go-palm-trees",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev:mobile": "turbo run dev --filter=@palmtree/mobile",
    "dev:admin": "turbo run dev --filter=@palmtree/admin",
    "dev:api": "turbo run dev --filter=@palmtree/api",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=@palmtree/admin",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "db:migrate": "pnpm --dir apps/api run db:migrate",
    "db:seed": "pnpm --dir apps/api run db:seed",
    "db:studio": "pnpm --dir apps/api run db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  }
}
